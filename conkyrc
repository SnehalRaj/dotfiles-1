alignment top_left
background yes
use_xft yes
xftfont Inconsolata for Powerline.otf:size=10
xftalpha 0.5
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color green
default_shade_color red
draw_borders no
draw_graph_borders no
draw_outline no
draw_shades no
gap_x 12
gap_y 48
minimum_size 200 5
maximum_width 210
cpu_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window no
own_window_class Conky
own_window_type desktop
stippled_borders 0
double_buffer yes
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no

TEXT
$sysname $kernel on $machine

Uptime: $alignr $uptime
Frequency: $alignr $freq_g

eth0 $alignr ${addr eth0}
wlan0 $alignr ${addr wlan0}

Processes: $processes ($running_processes)

CPU $alignr $cpu%
${cpubar cpu}

RAM $alignc $mem / $memmax $alignr $memperc%
$membar

Swap $alignr $swapperc%
${swapbar}
$hr
$alignc ${execi 60 ~/dotfiles/xkcd_title.sh | fold -w30}
$hr
${execi 60 ~/dotfiles/xkcd_text.sh | fold -w30}
